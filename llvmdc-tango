[compile]
cmd=llvmdc -version=Tango -c $i

flag=$i
incdir=-I$i
libdir=-L-L=$i
optimize=-O3
version=-version=$i


[link]
#oneatatime=yes
cmd=llvmdc $i -of$o

libdir=-L-L=$i
lib=-L-l=$i
flag=-L$i


[liblink]
